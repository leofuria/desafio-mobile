<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_mini"
        android:paddingTop="@dimen/spacing_mini"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
            android:id="@+id/listBreadcrumbText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_mini"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="@string/list_breadcrumb"/>

    <com.barreto.fulllab.presentation.base.view.PagedListLayout
            android:id="@+id/content_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>